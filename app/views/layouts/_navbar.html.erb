          <div class="form-group input-append">
            <%= text_field_tag :search, params[:search], class: "form-control span2", placeholder: "Search Products" %>
          </div>
          <button type="submit" class="btn btn-default">Search</button>
        <% end %>
      <% end %>



      <ul class="nav navbar-nav navbar-right">
      <% if current_admin %>
        <li><%= link_to 'Home Page', admin_products_path(current_admin), class: "navbar-brand" %></li>
